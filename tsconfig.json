{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["react", "react-dom"]
  },
  "include": [
    "src",
    "vite.config.js",
    "tailwind.config.js",
    "eslint.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}